<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.vpclub.demo.dao.SysUserDao">
	<!-- 查询用户的所有权限 -->
	<select id="queryAllPerms" resultType="string">
		select m.perms from sys_user_role ur 
			LEFT JOIN sys_role_menu rm on ur.role_id = rm.role_id 
			LEFT JOIN sys_menu m on rm.menu_id = m.menu_id 
		where ur.user_id = #{userId}
	</select>

	<!-- 查询用户的所有菜单ID --> 
	<select id="queryAllMenuId" resultType="long">
		select distinct rm.menu_id from sys_user_role ur 
			LEFT JOIN sys_role_menu rm on ur.role_id = rm.role_id 
		where ur.user_id = #{userId}
	</select>
	
	<select id="queryByUserName" resultType="cn.vpclub.demo.domain.entity.SysUserEntity">
		select * from sys_user where username = #{username}
	</select>

	<!-- 查询主账户下所有子账号 -->
	<select id="queryByParentId" resultType="cn.vpclub.demo.domain.entity.SysUserEntity">
		SELECT * from sys_user where parent_id = {parentId}
	</select>


	<!-- 根据key，更新value -->
	<update id="deleteByUserIds" parameterType="java.util.ArrayList">
		<foreach collection="list" item="item" index="index">
			update sys_user
			<set>
				deleted=0
			</set>
			where user_id = ${item};
		</foreach>
	</update>
	<insert id="addUser" parameterType="cn.vpclub.demo.dao.SysUserDao">
		insert into sys_user(user_id,parent_id,username,password,salt,mobile,create_user_id,create_time)
		 VALUES (#{userId},#{parentId},#{username},#{password},#{salt},#{mobile},#{createUserId},#{createTime})
	</insert>
</mapper>